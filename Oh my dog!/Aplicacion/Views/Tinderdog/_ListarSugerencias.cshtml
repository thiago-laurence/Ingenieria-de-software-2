@model List<Aplicacion.Models.PublicacionTinderdog>

@if(Model.Count() == 2)
{
    <div class="container" style="margin-top: 50px; margin-bottom: 50px;">
        <div class="row justify-content-center">
            <div class="col-6">

                <!--Este candidato queda oculto detras-->
                <div class="card shadow-lg" style="position: absolute;">
                    <div class="filtro"></div> <!-- Capa para el filtro oscuro -->
