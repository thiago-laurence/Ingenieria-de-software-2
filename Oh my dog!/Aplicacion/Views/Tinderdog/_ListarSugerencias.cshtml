                                        <button type="button" data-bs-target="#carouselExampleIndicators@(Model[1].Id)" data-bs-slide-to="@(i)" aria-label="Slide @(i + 1)" style="width: 100%;"></button>
                                    }
                                </div>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="~/img/@(Model[1].Fotos.ElementAt(0).Foto)" class="d-block w-100" alt="@(Model[1].Fotos.ElementAt(0).Foto)">
                                    </div>
                                    @for (int i = 1; i < Model[1].Fotos.Count; i++)
                                    {
                                        <div class="carousel-item">
                                            <img src="~/img/@(Model[1].Fotos.ElementAt(i).Foto)" class="d-block w-100" alt="@(Model[1].Fotos.ElementAt(i).Foto)">
