@model Aplicacion.Models.Publicacion

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Publicacion</h4>
<hr />
<div class="row">
    
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class ="form-control" asp-items="ViewBag.Tipo"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdPerro" class="control-label"></label>
                <select asp-for="IdPerro" class ="form-control" asp-items="ViewBag.IdPerro"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
